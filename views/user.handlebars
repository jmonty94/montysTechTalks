<div class="container">
    <div class="activePosts row">
        <div class="my-1 text-center">
            <h1>My Posts</h1>
        </div>
        {{#each posts as |post|}}
        <div class="card m-3" style="width: 18rem;">
            <div class="bg-opacity-25 bg-secondary card-body rounded-pill text-break text-center">
                <div class="row justify-content-end">
                    <button id="editBtn" class="rounded col-2"><i class="bi bi-pencil"></i></button>
                </div>
                <div class="">
                    <p class="card-text">
                        <a href="/posts/{{post.postID}}">{{post.title}}</a>
                    </p>
                    <p>{{post.username}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>