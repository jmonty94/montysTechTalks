<div class="container">
    <div class="justify-content-center row">
        <div class="my-1 text-center">
            <h1>My Posts</h1>
        </div>
        <div class="row justify-content-center">
            <button class="btn btn-primary col-4" id="newPostBtn">Create a new post</button>
        </div>
        {{#each posts as |post|}}
        <div class="card col-10 m-3">
            <div class="bg-opacity-25 card-body p-0 text-break text-center">
                <div class="card-text">
                    <p>
                        <a href="/{{username}}/{{post.postId}}">{{post.title}}</a>
                    </p>
                    <p>{{post.username}}</p>
                    <p>Posted on {{createdAt}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="/assets/js/user.js"></script>