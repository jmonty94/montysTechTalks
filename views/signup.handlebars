        <div class="col-12 d-flex justify-content-center">
            <form>
                <div class="mb-3">
                    <label for="username-input" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username-input" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text text-black">Please enter your username</div>
                </div>
                <div class="mb-3">
                    <label for="password-input" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password-input">
                    <div id="passHelp" class="form-text text-black">Please enter your password</div>
                </div>
                <button type="submit" class="btn btn-primary" id="sign-in-button">Sign In</button>
            </form>
        </div>
        <div class="col-12 d-flex justify-content-center"></div>
    </div>
